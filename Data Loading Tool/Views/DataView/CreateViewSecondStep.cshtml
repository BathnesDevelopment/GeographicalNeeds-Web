@model Data_Loading_Tool.Models.CreateViewMeasureModelList

@{
    ViewBag.Title = "Create View - Second Step";
}

<h2>Create View - Second Step</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Create View</legend>
        @for (int i = 0; i < Model.Models.Count(); i++)
        {
            <div class="form-group">
                @Html.DisplayFor(model => Model.Models[i].MeasureName, new { @class = "control-label" })
                @Html.HiddenFor(model => Model.Models[i].MeasureName)
            </div>            

            <div class="form-group">
                @Html.RequiredLabelFor(model => Model.Models[i].SelectedDimensionIDs, new { @class = "control-label" })
            </div>
            <div class="form-group">
                @Html.ListBoxFor(model => model.Models[i].SelectedDimensionIDs, Model.Models[i].Dimensions, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => Model.Models[i].SelectedDimensionIDs)
            </div>           
        }

        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Create" />
        </div>

    </fieldset>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}