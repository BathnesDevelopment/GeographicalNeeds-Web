@model Data_Loading_Tool.Models.CreateViewModel

@{
    ViewBag.Title = "CreateViewFirstStep";
}

<h2>CreateViewFirstStep</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>CreateViewModel</legend>
        <div class="form-group">
            @Html.LabelFor(model => model.ViewName, new { @class = "control-label" })
        </div>
        <div class="form-group">
            @Html.EditorFor(model => model.ViewName)
            @Html.ValidationMessageFor(model => model.ViewName)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.SelectedMeasureIDs, new { @class = "control-label" })
        </div>
        <div class="form-group">
            @Html.ListBoxFor(x => Model.SelectedMeasureIDs, Model.Measures, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.SelectedMeasureIDs)
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Create" />
        </div>
    </fieldset>
}