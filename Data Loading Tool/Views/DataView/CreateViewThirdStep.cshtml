@model List<Data_Loading_Tool.Models.CreateViewDimensionModel>

@{
    ViewBag.Title = "CreateViewThirdStep";
}

<h2>CreateViewThirdStep</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>CreateViewModel</legend>

        @for (int i = 0; i < Model.Count(); i++)
        {
            
            <div class="form-group">
                @Html.DisplayFor(model => Model[i].MeasureName, new { @class = "control-label" })
                @Html.HiddenFor(model => Model[i].MeasureName);
            </div>

            <div class="form-group">
                @Html.HiddenFor(model => Model[i].DimensionName);
                @Html.DisplayFor(model => Model[i].DimensionName, new { @class = "control-label" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => Model[i].SelectedDimensionValueIDs, new { @class = "control-label" })
            </div>
            <div class="form-group">
                @Html.ListBoxFor(model => model[i].SelectedDimensionValueIDs, Model[i].DimensionValues, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => Model[i].SelectedDimensionValueIDs)
            </div>
        }

        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Create" />
        </div>

    </fieldset>

}
