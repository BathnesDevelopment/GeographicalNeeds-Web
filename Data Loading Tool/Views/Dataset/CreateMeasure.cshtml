@model Data_Loading_Tool.Models.CreateMeasureModel

@{
    ViewBag.Title = "CreateMeasure";
}

<h2>CreateMeasure</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>CreateMeasureModel</legend>

        @Html.HiddenFor(x => x.StagingTableName)

        <div class="editor-label">
            @Html.LabelFor(model => model.MeasureName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MeasureName)
            @Html.ValidationMessageFor(model => model.MeasureName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.MeasureColumnID)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.MeasureColumnID, Model.StagingColumnsForMeasure, "Single Count per Row")
            @Html.ValidationMessageFor(model => model.MeasureColumnID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.GeographyColumnID)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(model => model.GeographyColumnID, Model.StagingColumnsForGeography)            
            @Html.ValidationMessageFor(model => model.GeographyColumnID)
        </div>

        @for (var i = 0; i < Model.MeasureDetails.Count(); i++ )
        {
            @Html.HiddenFor(model => Model.MeasureDetails[i].StagingColumnID)
            <div class="editor-label">
                @Html.LabelFor(model => Model.MeasureDetails[i].StagingColumnName)
            </div>
            <div class="editor-field">
                @Html.ValueFor(model => Model.MeasureDetails[i].StagingColumnName)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => Model.MeasureDetails[i].DimensionValueID)
            </div>
            <div class="editor-field">
                @Html.DropDownListFor(model => Model.MeasureDetails[i].DimensionValueID, Model.MeasureDetails[i].AvailableDimensions, "--- Not Applicable ---")
                @Html.ValidationMessageFor(model => Model.MeasureDetails[i].DimensionValueID)
            </div>

        }

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
