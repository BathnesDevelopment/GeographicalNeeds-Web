@model Data_Loading_Tool.Models.CreateDimensionModel

@{
    ViewBag.Title = "CreateDimension";
}

<h2>CreateDimension</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>CreateDimensionModel</legend>

        <div class="form-group">
            @Html.LabelFor(model => model.DimensionName, new { @class = "control-label" })
        </div>
        <div class="form-group">
            @Html.EditorFor(model => model.DimensionName)
            @Html.ValidationMessageFor(model => model.DimensionName)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DimColumnInStaging, new { @class = "control-label" })
        </div>
        <div class="form-group">
            @Html.DropDownListFor(x => Model.DimColumnInStaging, Model.StagingColumnsForDimension, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.DimColumnInStaging)
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Create" />
        </div>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
