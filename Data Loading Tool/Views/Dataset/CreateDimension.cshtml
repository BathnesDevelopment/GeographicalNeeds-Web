@model Data_Loading_Tool.Models.CreateDimensionModel

@{
    ViewBag.Title = "CreateDimension";
}

<h2>CreateDimension</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>CreateDimensionModel</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.DimensionName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DimensionName)
            @Html.ValidationMessageFor(model => model.DimensionName)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DimColumnInStaging)
        </div>
        <div class="editor-field">
            @Html.DropDownListFor(x => Model.DimColumnInStaging, Model.StagingColumnsForDimension)
